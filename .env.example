# WORM Shai-Hulud Testnet Configuration Template
# Copy this file to .env and fill in your actual values

# Network Configuration
NETWORK=sepolia

# Sender Account (owns Sepolia ETH for burning)
# YOU MUST MANUALLY ADD YOUR VALUES HERE:
SENDER_PRIVATE_KEY=your_sender_private_key_here
SENDER_ADDRESS=your_sender_address_here

# Receiver Account (for spend operations - testing transfers)
# YOU MUST MANUALLY ADD YOUR RECEIVER ADDRESS HERE:
RECEIVER_ADDRESS=your_receiver_address_here

# Default Testing Values (you can modify these)
DEFAULT_BURN_AMOUNT=1
DEFAULT_SPEND_AMOUNT=0.999
DEFAULT_FEE=0.001
DEFAULT_EPOCH_AMOUNT=0.002
DEFAULT_NUM_EPOCHS=3

# Optional: Logging
LOG_LEVEL=info
